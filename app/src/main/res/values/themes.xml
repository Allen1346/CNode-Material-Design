<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary_variant</item>
        <item name="colorPrimaryDark">@color/app_primary_variant</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:colorControlActivated">@color/app_accent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="android:listDivider">@color/divider_on_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="logoOnSurface">@drawable/logo_dark</item>
    </style>

    <style name="Base.Theme.App.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="Base.Theme.App.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_accent</item>
        <item name="colorOnPrimary">@color/app_accent</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App" />

    <style name="Theme.App.Dialog" parent="Base.Theme.App.Dialog" />

    <style name="Theme.App.Dialog.Loading">
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.App.Dialog.Alert" parent="Base.Theme.App.Dialog.Alert" />

    <style name="ThemeOverlay.App.Light" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ThemeOverlay.App.Dark" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="ThemeOverlay.App.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">?colorAccent</item>
    </style>

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.Thumb" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>
