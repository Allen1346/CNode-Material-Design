<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="invisible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_topic_good"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.2"
            android:textIsSelectable="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:textIsSelectable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/layout_no_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingVertical="24dp"
        android:text="@string/no_reply"
        android:textColor="?android:textColorTertiary"
        android:textSize="18sp"
        android:gravity="center"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_reply_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_replies_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="?colorAccent"
            android:textSize="14sp"
            tools:text="评论 10" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="?android:listDivider" />

    </LinearLayout>

</LinearLayout>
