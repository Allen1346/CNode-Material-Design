<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            tools:text="这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。这里是正文，有很长很长的一段话。" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_no_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp"
        android:text="@string/no_reply"
        android:textColor="?android:textColorTertiary"
        android:textSize="18sp"
        android:gravity="center"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_reply_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?colorSurface"
        android:elevation="@dimen/surface_elevation"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_replies_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="?colorAccent"
            android:textSize="14sp"
            tools:text="评论 10" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="?android:listDivider" />

    </LinearLayout>

</LinearLayout>
